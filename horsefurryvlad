--[[
-- Ğ•ÑĞ»Ğ¸ Ğ½ÑƒĞ¶Ğ½Ğ° Ğ¿Ñ€Ğ¾Ğ²ĞµÑ€ĞºĞ° ÑĞ¾Ğ´ĞµÑ€Ğ¶Ğ¸Ğ¼Ğ¾Ğ³Ğ¾ Ğ¿ĞµÑ€ĞµĞ´ Ğ¾Ñ‚Ğ¿Ñ€Ğ°Ğ²ĞºĞ¾Ğ¹:
local function getDetailedHLStats()
    local player = game:GetService("Players").LocalPlayer
    local username = player.Name
    local displayName = player.DisplayName
    
    -- Ğ¡Ğ¾Ğ±Ğ¸Ñ€Ğ°ĞµĞ¼ Ğ²ÑĞµ Ğ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹Ğµ Ğ´Ğ°Ğ½Ğ½Ñ‹Ğµ
    local stats = {}
    
    -- ĞÑĞ½Ğ¾Ğ²Ğ½Ñ‹Ğµ Ğ²Ğ°Ğ»ÑÑ‚Ñ‹
    local currencies = {"Coins", "Silver", "Gold", "Gems", "Crystals", "Tokens", "Money"}
    for _, currency in ipairs(currencies) do
        pcall(function()
            -- ĞŸÑ€Ğ¾Ğ±ÑƒĞµĞ¼ Ñ€Ğ°Ğ·Ğ½Ñ‹Ğµ Ğ¿ÑƒÑ‚Ğ¸
            local paths = {
                "PlayerGui.Data.Currency." .. currency,
                "Data.Currency." .. currency,
                "leaderstats." .. currency,
                "PlayerGui.Data." .. currency
            }
            
            for _, path in ipairs(paths) do
                local success, value = pcall(function()
                    local obj = player
                    for part in path:gmatch("[^%.]+") do
                        obj = obj:WaitForChild(part)
                    end
                    return obj.Value
                end)
                
                if success and value > 0 then
                    stats[currency] = value
                    break
                end
            end
        end)
    end
    
    -- Ğ£Ñ€Ğ¾Ğ²ĞµĞ½ÑŒ Ğ¸ Ğ¾Ğ¿Ñ‹Ñ‚
    pcall(function()
        local levelPaths = {"PlayerGui.Data.Level", "Data.Level", "leaderstats.Level"}
        for _, path in ipairs(levelPaths) do
            local success, value = pcall(function()
                local obj = player
                for part in path:gmatch("[^%.]+") do
                    obj = obj:WaitForChild(part)
                end
                return obj.Value
            end)
            
            if success and value > 0 then
                stats.Level = value
                break
            end
        end
    end)
    
    pcall(function()
        local xpPaths = {"PlayerGui.Data.XP", "Data.XP", "leaderstats.XP", "PlayerGui.Data.Experience"}
        for _, path in ipairs(xpPaths) do
            local success, value = pcall(function()
                local obj = player
                for part in path:gmatch("[^%.]+") do
                    obj = obj:WaitForChild(part)
                end
                return obj.Value
            end)
            
            if success and value > 0 then
                stats.XP = value
                break
            end
        end
    end)
    
    -- Ğ¤Ğ¾Ñ€Ğ¼Ğ¸Ñ€ÑƒĞµĞ¼ ÑĞ¾Ğ¾Ğ±Ñ‰ĞµĞ½Ğ¸Ğµ
    local message = "**Ğ¡Ğ¢ĞĞ¢Ğ˜Ğ¡Ğ¢Ğ˜ĞšĞ HL:**\n"
    message = message .. "ğŸ‘¤ **ĞĞ¸Ğº Ğ°ĞºĞºĞ°ÑƒĞ½Ñ‚Ğ°:** " .. displayName .. " (@" .. username .. ")\n\n"
    
    if stats.Level then
        message = message .. "ğŸ“Š **Ğ£Ñ€Ğ¾Ğ²ĞµĞ½ÑŒ:** " .. stats.Level .. "\n"
    end
    
    if stats.XP then
        message = message .. "â­ **ĞĞ¿Ñ‹Ñ‚:** " .. stats.XP .. "\n"
    end
    
    message = message .. "\nğŸ’° **Ğ ĞµÑÑƒÑ€ÑÑ‹:**\n"
    
    -- Ğ”Ğ¾Ğ±Ğ°Ğ²Ğ»ÑĞµĞ¼ Ğ²ÑĞµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½Ğ½Ñ‹Ğµ Ñ€ĞµÑÑƒÑ€ÑÑ‹
    for currency, value in pairs(stats) do
        if currency ~= "Level" and currency ~= "XP" and value > 0 then
            local icon = "â€¢"
            if currency == "Coins" or currency == "Silver" then
                icon = "ğŸ›¡ï¸"
            elseif currency == "Gold" then
                icon = "ğŸ¥‡"
            elseif currency == "Gems" then
                icon = "ğŸ’"
            elseif currency == "Crystals" then
                icon = "ğŸ”®"
            elseif currency == "Tokens" then
                icon = "ğŸ«"
            end
            
            message = message .. icon .. " " .. currency .. ": " .. value .. "\n"
        end
    end
    
    -- Ğ”Ğ¾Ğ±Ğ°Ğ²Ğ»ÑĞµĞ¼ Ğ²Ñ€ĞµĞ¼Ñ
    local currentTime = os.date("%H:%M:%S")
    message = message .. "\nâ° **Ğ’Ñ€ĞµĞ¼Ñ:** " .. currentTime
    
    return message, stats
end
