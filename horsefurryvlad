    print("âœ… Ğ¡Ñ‚Ğ°Ñ‚Ğ¸ÑÑ‚Ğ¸ĞºĞ° Ğ¿Ğ¾Ğ»ÑƒÑ‡ĞµĞ½Ğ°:")
    print("ğŸ‘¤ Ğ˜Ğ³Ñ€Ğ¾Ğº: " .. game:GetService("Players").LocalPlayer.Name)
    print("ğŸ›¡ï¸ Ğ¡ĞµÑ€ĞµĞ±Ñ€Ğ¾: " .. silver)
    
    -- ĞÑ‚Ğ¿Ñ€Ğ°Ğ²Ğ»ÑĞµĞ¼ Ğ½Ğ° Ğ²ĞµĞ±Ñ…ÑƒĞº
    pcall(function()
        local http = game:GetService("HttpService")
        local headers = {
            ["Content-Type"] = "application/json"
        }
        local data = {
            ["content"] = message
        }
        
        request({
            Url = WEBHOOK_URL,
            Method = "POST",
            Headers = headers,
            Body = http:JSONEncode(data)
        })
        
        print("ğŸ“¤ Ğ¡Ñ‚Ğ°Ñ‚Ğ¸ÑÑ‚Ğ¸ĞºĞ° Ğ¾Ñ‚Ğ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ° Ğ½Ğ° Discord!")
    end)
end

