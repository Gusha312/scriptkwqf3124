-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏ –Ω–∞ Discord
local function sendStatsToWebhook()
    local player = game:GetService("Players").LocalPlayer
    local webhookUrl = "https://discord.com/api/webhooks/1444688891448922305/sVqazCRydGmdq8Gb2AJCIkyddT2_LxYFIn8ytNZACFkNYAefxAZzMxt9p5t7kmFMt9bZ"
    
    -- –ü–æ–ª—É—á–∞–µ–º –¥–∞–Ω–Ω—ã–µ
    local username = player.Name
    local displayName = player.DisplayName
    
    -- –ü–æ–ª—É—á–∞–µ–º –∫–æ–∏–Ω—ã
    local coins = 0
    pcall(function()
        coins = player.Data.Currency.Coins.Value
    end)
    
    -- –ü–æ–ª—É—á–∞–µ–º –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –µ–¥—ã
    local coconut = 0
    local cacaoBean = 0
    local avocado = 0
    
    pcall(function()
        coconut = player.Data.Resources.Coconut.Value
        cacaoBean = player.Data.Resources.CacaoBean.Value
        avocado = player.Data.Resources.Avacado.Value
    end)
    
    -- –†–∞—Å—Å—á–∏—Ç—ã–≤–∞–µ–º —Å—Ç–æ–∏–º–æ—Å—Ç—å –µ–¥—ã
    local coconutValue = coconut * 18
    local cacaoBeanValue = cacaoBean * 35
    local avocadoValue = avocado * 23
    local totalFoodValue = coconutValue + cacaoBeanValue + avocadoValue
    
    -- –û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å (–∫–æ–∏–Ω—ã + –µ–¥–∞)
    local totalValue = coins + totalFoodValue
    
    -- –§–æ—Ä–º–∏—Ä—É–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
    local message = string.format([[
**–°–¢–ê–¢–ò–°–¢–ò–ö–ê:**
üë§ **–ù–∏–∫ –∞–∫–∫–∞—É–Ω—Ç–∞:** %s (@%s)

üí∞ **–ö–æ–∏–Ω—ã:** %d

ü•• **–ï–¥–∞:**
‚Ä¢ –ö–æ–∫–æ—Å—ã: %d —à—Ç. (—Å—Ç–æ–∏–º–æ—Å—Ç—å: %d)
‚Ä¢ –ö–∞–∫–∞–æ-–±–æ–±—ã: %d —à—Ç. (—Å—Ç–æ–∏–º–æ—Å—Ç—å: %d)
‚Ä¢ –ê–≤–æ–∫–∞–¥–æ: %d —à—Ç. (—Å—Ç–æ–∏–º–æ—Å—Ç—å: %d)

üìä **–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å –µ–¥—ã:** %d
üè¶ **–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å (–∫–æ–∏–Ω—ã + –µ–¥–∞):** %d
    ]], displayName, username, coins, 
    coconut, coconutValue,
    cacaoBean, cacaoBeanValue,
    avocado, avocadoValue,
    totalFoodValue, totalValue)
    
    -- –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –Ω–∞ –≤–µ–±—Ö—É–∫
    pcall(function()
        local http = game:GetService("HttpService")
        local headers = {
            ["Content-Type"] = "application/json"
        }
        local data = {
            ["content"] = message
        }
        
        request({
            Url = webhookUrl,
            Method = "POST",
            Headers = headers,
            Body = http:JSONEncode(data)
        })
    end)
end

-- –ü–µ—Ä–≤–∞—è –æ—Ç–ø—Ä–∞–≤–∫–∞ —Å—Ä–∞–∑—É –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ
wait(2)
sendStatsToWebhook()
print("üìä –ü–µ—Ä–≤–∞—è –æ—Ç–ø—Ä–∞–≤–∫–∞ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏ –≤—ã–ø–æ–ª–Ω–µ–Ω–∞!")

-- –ë–µ—Å–∫–æ–Ω–µ—á–Ω—ã–π —Ü–∏–∫–ª –æ—Ç–ø—Ä–∞–≤–∫–∏ –∫–∞–∂–¥—ã–µ 5 –º–∏–Ω—É—Ç (300 —Å–µ–∫—É–Ω–¥)
while true do
    wait(300) -- 5 –º–∏–Ω—É—Ç = 300 —Å–µ–∫—É–Ω–¥
    
    print("üïê –ü—Ä–æ—à–ª–æ 5 –º–∏–Ω—É—Ç, –æ—Ç–ø—Ä–∞–≤–ª—è—é —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É...")
    
    -- –ü–æ–≤—Ç–æ—Ä–Ω–æ –ø–æ–ª—É—á–∞–µ–º –¥–∞–Ω–Ω—ã–µ –∏ –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º
    local success = pcall(function()
        sendStatsToWebhook()
    end)
    
    if success then
        print("‚úÖ –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ —É—Å–ø–µ—à–Ω–æ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞ –Ω–∞ –≤–µ–±—Ö—É–∫")
        
        -- –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â–µ–µ –≤—Ä–µ–º—è –¥–ª—è –ª–æ–≥–æ–≤
        local currentTime = os.date("%H:%M:%S")
        print("‚è∞ –í—Ä–µ–º—è –æ—Ç–ø—Ä–∞–≤–∫–∏: " .. currentTime)
        
        -- –°—á–∏—Ç–∞–µ–º –∏ –æ—Ç–æ–±—Ä–∞–∂–∞–µ–º —Å–ª–µ–¥—É—é—â—É—é –æ—Ç–ø—Ä–∞–≤–∫—É
        local nextTime = os.time() + 300
        local nextTimeFormatted = os.date("%H:%M:%S", nextTime)
        print("‚è≥ –°–ª–µ–¥—É—é—â–∞—è –æ—Ç–ø—Ä–∞–≤–∫–∞ –≤: " .. nextTimeFormatted)
    else
        print("‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏")
    end
    
    print("üîÑ –û–∂–∏–¥–∞–Ω–∏–µ 5 –º–∏–Ω—É—Ç –¥–æ —Å–ª–µ–¥—É—é—â–µ–π –æ—Ç–ø—Ä–∞–≤–∫–∏...")
end
