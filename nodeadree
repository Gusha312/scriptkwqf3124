while true do
    wait(5)
    
    local localPlayer = game:GetService("Players").LocalPlayer
    local replicatedStorage = game:GetService("ReplicatedStorage")
    local remotes = replicatedStorage.Remotes
    
    -- Установка стадий обучения
    remotes.SetTutorialStageRemote:InvokeServer("CreatureEditor", "Sochuri")
    wait(0.1)
    
    remotes.SetTutorialStageRemote:InvokeServer("SurvivalBasics")
    wait(0.1)
    
    remotes.SetTutorialStageRemote:InvokeServer("Complete")
    wait(0.1)
    
    -- Деспавн
    remotes.DespawnRemote:InvokeServer()
    wait(1)
    
    -- Обновление избранного
    game:GetService("Players").LocalPlayer.UpdateFavoritedRemote:FireServer(nil, true)
    wait(0.1)
    
    -- Создание слота
    remotes.CreateSlotRemote:InvokeServer("Xeleviprex")
    wait(1)
    
    -- Спавн в слоте
    remotes.SpawnRemote:InvokeServer("Slot2")
    wait(5)
    
    -- Нанесение урона персонажу
    if localPlayer.Character then
        local args = {localPlayer.Character}
        remotes.CharactersDamageRemote:FireServer(unpack(args))
    end
    
    -- Серия самоповреждений
    for i = 1, 5 do
        remotes.OutOfBoundsSelfDamage:FireServer(0.25)
        wait(1)
    end
    
    -- Получение наград за смерть
    remotes.ClaimDeathRewardsRemote:InvokeServer()
    
    -- Удаление слота
    local args = {"Slot2", false}
    remotes.DeleteSlotRemote:InvokeServer(unpack(args))
end
