-- Абсолютный минимум потребления
local r = game:GetService("RunService")

-- Полное отключение рендера
settings().Rendering.Enabled = false

-- Один раз чистим память
for i,v in pairs(workspace:GetDescendants()) do
    pcall(function() v:Destroy() end)
end

-- Пустой цикл с огромными интервалами
local t = 0
r.Heartbeat:Connect(function(d)
    t = t + d
    if t > 10 then  -- Раз в 10 секунд
        t = 0
    end
end)
