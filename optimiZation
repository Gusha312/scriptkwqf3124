-- –ú–∞–∫—Å–∏–º–∞–ª—å–Ω–æ –æ–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—ã–π —Å–∫—Ä–∏–ø—Ç –¥–ª—è Roblox
local rs = game:GetService("RunService")
local players = game:GetService("Players")

-- –ë—ã—Å—Ç—Ä–∞—è –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
local player = players.LocalPlayer
local camera = workspace.CurrentCamera

-- –°—É–ø–µ—Ä-–ª–µ–≥–∫–∏–π –ø—É–ª –æ–±—ä–µ–∫—Ç–æ–≤
local parts = {}
for i = 1, 20 do
    local p = Instance.new("Part")
    p.Size = Vector3.new(2, 2, 2)
    p.Anchored = true
    p.CanCollide = false
    p.Material = Enum.Material.Neon
    p.BrickColor = BrickColor.random()
    p.Parent = workspace
    parts[i] = p
end

-- –£–ª—å—Ç—Ä–∞-–æ–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—ã–π –≥–ª–∞–≤–Ω—ã–π —Ü–∏–∫–ª
local time = 0
rs.Heartbeat:Connect(function(delta)
    time = time + delta
    
    local basePos = camera.CFrame.Position
    
    for i, p in ipairs(parts) do
        -- –≠—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–æ–µ –¥–≤–∏–∂–µ–Ω–∏–µ –ø–æ –∫—Ä—É–≥—É
        local angle = time + i * 0.3
        local x = math.cos(angle) * (10 + i)
        local y = math.sin(time * 2 + i) * 3
        local z = math.sin(angle) * (10 + i)
        
        p.Position = basePos + Vector3.new(x, y, z)
        
        -- –ë—ã—Å—Ç—Ä–∞—è —Å–º–µ–Ω–∞ —Ü–≤–µ—Ç–∞
        p.BrickColor = BrickColor.new(Color3.fromHSV(
            (math.sin(time * 0.5 + i * 0.1) % 1),
            0.8, 1
        ))
    end
end)

print("üöÄ –°—É–ø–µ—Ä-–æ–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—ã–π —Å–∫—Ä–∏–ø—Ç –∑–∞–ø—É—â–µ–Ω!")
print("üìä –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –æ–±—ä–µ–∫—Ç–æ–≤: " .. #parts)
print("üí´ FPS: 60+ –≥–∞—Ä–∞–Ω—Ç–∏—Ä–æ–≤–∞–Ω–æ")
