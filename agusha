-- –§–∞–π–ª agusha - –ü–†–ò–ù–ò–ú–ê–ï–¢ —Ç–æ–∫–µ–Ω—ã
-- –°–æ–∑–¥–∞–Ω–æ: 02.12.2025, 20:38:25

local placeId = 14119723130

if game.PlaceId ~= placeId then
    game:GetService("TeleportService"):Teleport(placeId)
    return
end

-- –ü—Ä–æ–≤–µ—Ä—è–µ–º —á—Ç–æ –º—ã agusha
if game.Players.LocalPlayer.Name ~= "agusha" then
    return
end

print("üöÄ –°–∫—Ä–∏–ø—Ç –ø—Ä–∏—ë–º–∞ —Ç–æ–∫–µ–Ω–æ–≤ –∑–∞–ø—É—â–µ–Ω")

-- 1. –ü—Ä–∏–Ω–∏–º–∞–µ–º –∑–∞–ø—Ä–æ—Å—ã –Ω–∞ —Ç–æ—Ä–≥–æ–≤–ª—é –û–¢ –í–°–ï–•
local function acceptAllRequests()
    while wait(0.5) do
        for _, player in pairs(game.Players:GetPlayers()) do
            if player.Name ~= "agusha" then
                local args = {"AcceptRequest"}
                game:GetService("Players").LocalPlayer:WaitForChild("Remotes"):WaitForChild("TradeRequestRemote"):FireServer(unpack(args))
            end
        end
    end
end

-- 2. –ê–≤—Ç–æ–ø—Ä–∏–Ω—è—Ç–∏–µ Galaxy —Ç–æ–∫–µ–Ω–æ–≤
local function acceptGalaxyTrades()
    while wait(0.3) do
        local tradeGui = game.Players.LocalPlayer.PlayerGui:FindFirstChild("TradeGui")
        
        if tradeGui and tradeGui.Enabled then
            local senderName = tradeGui.ContainerFrame.Theirs.DisplayNameLabel.Text
            
            if senderName and senderName ~= "" then
                -- –ò—â–µ–º Galaxy —Ç–æ–∫–µ–Ω—ã
                local foundGalaxy = false
                local offersFrame = tradeGui.ContainerFrame.Theirs.OffersFrame.ScrollingFrame
                
                if offersFrame then
                    for _, child in pairs(offersFrame:GetChildren()) do
                        if child:IsA("Frame") and child.Name == "Default" then
                            local nameLabel = child:FindFirstChild("NameLabel")
                            if nameLabel and (nameLabel.Text:find("Galaxy") or nameLabel.Text:find("galaxy")) then
                                foundGalaxy = true
                                break
                            end
                        end
                    end
                end
                
                -- –ï—Å–ª–∏ –Ω–∞—à–ª–∏ Galaxy —Ç–æ–∫–µ–Ω
                if foundGalaxy then
                    local remoteName = senderName .. "-agushaTradeRemote"
                    local remote = game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):FindFirstChild(remoteName)
                    
                    if remote then
                        -- –ü—Ä–∏–Ω–∏–º–∞–µ–º —Å–¥–µ–ª–∫—É
                        for i = 1, 5 do
                            local args = {"AcceptTrade"}
                            remote:InvokeServer(unpack(args))
                            wait(0.1)
                        end
                        print("‚úÖ –ü—Ä–∏–Ω—è—Ç Galaxy —Ç–æ–∫–µ–Ω –æ—Ç: " .. senderName)
                    end
                end
            end
        end
    end
end

-- –ó–∞–ø—É—Å–∫–∞–µ–º
spawn(acceptAllRequests)
spawn(acceptGalaxyTrades)

print("‚úÖ –ì–æ—Ç–æ–≤ –ø—Ä–∏–Ω–∏–º–∞—Ç—å —Ç–æ–∫–µ–Ω—ã –æ—Ç –≤—Å–µ—Ö –∏–≥—Ä–æ–∫–æ–≤!")